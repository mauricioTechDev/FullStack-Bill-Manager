<!doctype html>
<html>
<head>
    <title>iTrack</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="signupStyle.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
      <div class="headerLogo">
        <h1><i class="fa fa-money" aria-hidden="true"></i>Prioritize Your Bills<i class="fa fa-money" aria-hidden="true"></i></h1>
      </div>
      <div class="headerInstructions">
        <h2>Add your different bills here.<br>Click on the thumbs up to increase its importance. </h2>
      </div>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Profile</h3>

                <% if (user.local.email) { %>
                    <p>
                        <p>Acount Info</p>
                        <!-- <strong>id</strong>: <%= user._id %><br> -->
                        <strong>email</strong>: <%= user.local.email %><br>
                        <!-- <strong>password</strong>: <%= user.local.password %> -->
                    </p>
                    <p>Click below to remove your account</p>

                    <a href="/unlink/local" class="btn btn-default">DELETE</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="coverPhoto">
          <img src="img/By-baranq_HOW-TO-PAY-BILLS-ONLINE.jpg" alt="person paying there bills" class="payingBillsPic">

        <div class="col-sm-6">
          <h3>Messages</h3>
          <span>Thumbs up for PAYED - Check off to delete</span>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].msg %></span>
              <span><%= messages[i].thumbUp %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <!-- <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span> -->
              <span><i class="fas fa-ban"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Add a message</h2>
        <% if (user.local.email) { %>
          <form action="/messages" method="POST">
            <input type="text" placeholder="bill name" name="name">
            <input type="text" placeholder="message" name="msg" value="$">
            <button type="submit">Submit</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
